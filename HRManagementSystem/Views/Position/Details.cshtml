@using HRManagementSystem.DTO
@model PositionDetailsDto

@{
    ViewData["Title"] = "Position Details";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center text-primary">
        <i class="fas fa-briefcase me-2"></i> Position Details
    </h1>

    <hr class="mb-5" />

    <div class="card shadow-lg mb-5 border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-info-circle me-2"></i> Position Information
            </h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p class="card-text">
                        <strong><i class="fas fa-tag me-2"></i> Id:</strong> @Model.Id
                    </p>
                    <p class="card-text">
                        <strong><i class="fas fa-signature me-2"></i> Name:</strong> @Model.Name
                    </p>
                    <p class="card-text">
                        <strong><i class="fas fa-users me-2"></i> Number of Employees:</strong> <span class="badge bg-success">@Model.Employees.Count()</span>
                    </p>
                </div>
                <div class="col-md-6">
                    <p class="card-text">
                        <strong><i class="fas fa-calendar-alt me-2"></i> Created At:</strong> @Model.CreatedAt.ToString("dd MMMM yyyy")
                    </p>
                </div>
            </div>
            <hr />
            <p class="card-text">
                <strong><i class="fas fa-file-alt me-2"></i> Description:</strong>
            </p>
            <p class="alert alert-info">
                @Model.Description
            </p>
        </div>
    </div>

    <div class="mt-5">
        <h3 class="mb-3 text-secondary">
            <i class="fas fa-user-tie me-2"></i> Employees in this Position
        </h3>
        @if (Model.Employees.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-bordered shadow-sm">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Name</th>
                            <th>Hire Date</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                <td>@employee.Name</td>
                                <td>@employee.HireDate.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-action="Details"
                                       asp-controller="Employee"
                                       asp-route-id="@employee.Id"
                                       title="View Employee Details">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> No employees are currently assigned to this position.
            </div>
        }
    </div>

    <hr class="mt-5"/>

    <div class="text-center mb-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i> Back to Position List
        </a>
    </div>

</div>