@model IEnumerable<HRManagementSystem.DTO.PositionDto>

@{
    ViewData["Title"] = "Positions List";
}

<div class="container mt-5">

    <h1 class="mb-4 text-primary">
        <i class="fas fa-briefcase me-2"></i> Positions Management
    </h1>

    <hr />

    <p class="mb-4">
        <a asp-action="Add" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i> Add New Position
        </a>
    </p>

    <div class="table-responsive shadow-lg d-none d-lg-block">
        <table class="table table-striped table-hover table-bordered">

            <thead class="thead-dark bg-dark text-white">
                <tr>
                    <th class="text-nowrap">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="w-100">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th class="text-nowrap">
                        <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th class="text-center text-nowrap">
                        Actions
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-nowrap">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @(item.Description.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)
                        </td>
                        <td class="text-nowrap">
                            @item.CreatedAt.ToString("yyyy-MM-dd")
                        </td>
                        <td class="text-center text-nowrap">
                            <a asp-action="Details" asp-controller="Position" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="View Details">
                                <i class="fas fa-file-alt"></i> <span class="d-none d-lg-inline"> Details</span>
                            </a>
                            <a asp-action="Edit" asp-controller="Position" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1" title="Update Position">
                                <i class="fas fa-pen-to-square"></i> <span class="d-none d-lg-inline"> Edit</span>
                            </a>
                            <a asp-action="Delete" asp-controller="Position" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete Position">
                                <i class="fas fa-trash-alt"></i> <span class="d-none d-lg-inline"> Delete</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-view-list d-block d-lg-none">
        @foreach (var item in Model)
        {
            <div class="card shadow-sm mb-3 border-start border-primary border-4">
                <div class="card-body">

                    <h5 class="card-title text-primary">
                        <i class="fas fa-tag me-2"></i> @item.Name
                    </h5>
                    <hr class="mt-1 mb-2" />

                    <div class="mb-2">
                        <strong><i class="fas fa-calendar-alt me-1"></i> Created At:</strong>
                        @item.CreatedAt.ToString("yyyy-MM-dd")
                    </div>
                    <p class="card-text small text-muted">
                        <strong>Description:</strong>
                        @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                    </p>

                    <div class="d-flex justify-content-start mt-3">
                        <a asp-action="Details" asp-controller="Position" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-2">
                            <i class="fas fa-file-alt"></i> Details
                        </a>
                        <a asp-action="Edit" asp-controller="Position" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-2">
                            <i class="fas fa-pen-to-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-controller="Position" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>