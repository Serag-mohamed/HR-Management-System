@{
    ViewData["Title"] = "Password Reset Link Sent";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">

            <h1 class="mb-4 text-primary text-center">
                <i class="fas fa-check-circle me-2"></i> Request Sent
            </h1>

            <div class="card shadow-lg border-0 p-4">

                <div class="card-body text-center">

                    <h5 class="card-title text-success mb-3 fw-bold">
                        Check Your Inbox!
                    </h5>

                    <p class="lead text-dark mb-4">
                        If an account with the email you entered exists, a **password reset link** has been sent. Please check your email inbox and spam folder.
                    </p>

                    <div class="d-grid gap-2 mt-4 pt-3 border-top">
                        <a href="/Account/Login" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>