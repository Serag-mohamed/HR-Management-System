@model HRManagementSystem.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-10">

            <h1 class="mb-4 text-primary text-center">
                <i class="fas fa-sign-in-alt me-2"></i> HRMS Login
            </h1>

            <div class="card shadow-lg border-0 p-4">

                <div class="card-body">

                    <form asp-action="Login" method="post">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="fas fa-envelope me-1 text-secondary"></i> Email Address
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" type="email" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label fw-bold">
                                <i class="fas fa-key me-1 text-secondary"></i> Password
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger small mt-1"></span>
                        </div>

                        <div class="form-group form-check mb-4">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label fw-normal" asp-for="RememberMe">
                                @Html.DisplayNameFor(model => model.RememberMe)
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i> Log In
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="ForgotPassword" class="btn btn-link text-muted">
                    <i class="fas fa-question-circle me-1"></i> Forgot Password?
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}