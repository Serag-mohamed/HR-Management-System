@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">

            <h1 class="mb-4 text-success text-center">
                <i class="fas fa-check-circle me-2"></i> Password Reset Successful
            </h1>

            <div class="card shadow-lg border-0 border-start border-5 border-success p-4">

                <div class="card-body text-center">

                    <h5 class="card-title text-success mb-3 fw-bold">
                        Success!
                    </h5>

                    <p class="lead text-dark mb-4">
                        Your password has been successfully reset. You can now log in with your new password.
                    </p>

                    <div class="d-grid gap-2 mt-4 pt-3 border-top">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>