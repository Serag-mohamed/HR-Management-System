@model IEnumerable<HRManagementSystem.DTO.LeaveDto>

@{
    ViewData["Title"] = "My Leave Requests";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <h1 class="text-primary">
            <i class="fas fa-plane-departure me-2"></i> My Leave Requests
        </h1>
        <a asp-action="Add" class="btn btn-success btn-lg shadow-sm">
            <i class="fas fa-plus-circle me-2"></i> Submit New Leave
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="fas fa-info-circle me-2"></i> You have not submitted any leave requests yet.
        </div>
    }
    else
    {
        <div class="card shadow-lg">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>
                                    <i class="fas fa-list-alt me-1"></i> @Html.DisplayNameFor(model => model.LeaveType)
                                </th>
                                <th>
                                    <i class="fas fa-calendar-alt me-1"></i> @Html.DisplayNameFor(model => model.StartDate)
                                </th>
                                <th>
                                    <i class="fas fa-calendar-times me-1"></i> @Html.DisplayNameFor(model => model.EndDate)
                                </th>
                                <th>
                                    <i class="fas fa-hashtag me-1"></i> @Html.DisplayNameFor(model => model.DaysNamer)
                                </th>
                                <th>
                                    <i class="fas fa-clipboard-check me-1"></i> @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">
                                            @Html.DisplayFor(modelItem => item.LeaveType)
                                        </span>
                                    </td>

                                    <td>
                                        @if (item.StartDate is DateTime startDate)
                                        {
                                            @(startDate.ToShortDateString())
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        }
                                    </td>

                                    <td>
                                        @if (item.EndDate is DateTime endDate)
                                        {
                                            @(endDate.ToShortDateString())
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.EndDate)
                                        }
                                    </td>

                                    <td class="fw-bold">
                                        @Html.DisplayFor(modelItem => item.DaysNamer)
                                    </td>

                                    <td>
                                        @{
                                            string statusText = item.Status?.ToString() ?? "Unknown";
                                            string badgeClass = statusText switch
                                            {
                                                "Approved" => "bg-success",
                                                "Pending" => "bg-warning text-dark",
                                                "Rejected" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                            <span class="badge @badgeClass">@statusText</span>
                                        }
                                    </td>

                                    <td class="text-center text-nowrap">
                                        
                                        @if (item.Status?.ToString() == "Pending")
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1" title="Edit Request">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                        
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Cancel Request">
                                                <i class="fas fa-trash-alt"></i> Cancel
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>