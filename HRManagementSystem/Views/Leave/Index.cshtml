@model IEnumerable<HRManagementSystem.DTO.LeaveReportDto>

@{
    ViewData["Title"] = "Leave Report"; 
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <h1 class="text-primary">
            <i class="fas fa-file-alt me-2"></i> Employee Leave Report
        </h1>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="fas fa-info-circle me-2"></i> No leave requests found in the system.
        </div>
    }
    else
    {
        <div class="card shadow-lg">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>
                                    <i class="fas fa-user me-1"></i> @Html.DisplayNameFor(model => model.EmployeeName)
                                </th>
                                <th>
                                    <i class="fas fa-briefcase me-1"></i> @Html.DisplayNameFor(model => model.PositionName)
                                </th>
                                <th>
                                    <i class="fas fa-tag me-1"></i> @Html.DisplayNameFor(model => model.LeaveType)
                                </th>
                                <th>
                                    <i class="fas fa-calendar-alt me-1"></i> @Html.DisplayNameFor(model => model.StartDate)
                                </th>
                                <th>
                                    <i class="fas fa-calendar-times me-1"></i> @Html.DisplayNameFor(model => model.EndDate)
                                </th>
                                <th>
                                    <i class="fas fa-hashtag me-1"></i> @Html.DisplayNameFor(model => model.DaysNamer)
                                </th>
                                <th>
                                    <i class="fas fa-clipboard-check me-1"></i> @Html.DisplayNameFor(model => model.Status)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(modelItem => item.EmployeeName)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-muted small">
                                            @Html.DisplayFor(modelItem => item.PositionName)
                                        </span>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LeaveType)
                                    </td>

                                    <td>
                                        @if (item.StartDate is DateTime startDate)
                                        {
                                            <span class="badge bg-info text-dark">@(startDate.ToShortDateString())</span>
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        }
                                    </td>

                                    <td>
                                        @if (item.EndDate is DateTime endDate)
                                        {
                                            <span class="badge bg-info text-dark">@(endDate.ToShortDateString())</span>
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.EndDate)
                                        }
                                    </td>

                                    <td class="fw-bold">
                                        @Html.DisplayFor(modelItem => item.DaysNamer)
                                    </td>

                                    <td>
                                        @{
                                            string statusText = item.Status?.ToString() ?? "Unknown";
                                            string badgeClass = statusText switch
                                            {
                                                "Approved" => "bg-success",
                                                "Pending" => "bg-warning text-dark",
                                                "Rejected" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                            <span class="badge @badgeClass">@statusText</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>