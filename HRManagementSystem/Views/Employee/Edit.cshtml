@model HRManagementSystem.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";

    SelectList selectListPosItems = ViewBag.Positions != null
        ? new SelectList(ViewBag.Positions, "Id", "Name", Model.PositionId)
        : new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text");

    SelectList selectListManagerItems = ViewBag.Managers != null
        ? new SelectList(ViewBag.Managers, "Id", "Name", Model.ManagerId)
        : new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text");
}

<div class="container mt-5">

    <h1 class="mb-4 text-primary">
        <i class="fas fa-edit me-2"></i> Edit Employee Information
    </h1>

    <hr class="mb-5" />

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i> Update Employee Details
                    </h5>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Edit">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }

                        <input type="hidden" asp-for="Id" />

                        <div class="row">

                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-bold"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="FirstName" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-bold"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="LastName" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="example@company.com" />
                                <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-bold"></label>
                                <input asp-for="Phone" class="form-control" placeholder="e.g., +1234567890" />
                                <span asp-validation-for="Phone" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-12 mb-3">
                                <label asp-for="Address" class="form-label fw-bold"></label>
                                <input asp-for="Address" class="form-control" placeholder="Street, City, Country" />
                                <span asp-validation-for="Address" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BasicSalary" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="BasicSalary" class="form-control" type="number" step="0.01" min="0" placeholder="e.g., 50000.00" />
                                </div>
                                <span asp-validation-for="BasicSalary" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PositionId" class="form-label fw-bold">
                                    Position:
                                </label>
                                <select asp-for="PositionId" asp-items="selectListPosItems" class="form-select">
                                    <option value="">-- Select Position --</option>
                                </select>
                                <span asp-validation-for="PositionId" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="ManagerId" class="form-label fw-bold">
                                    Manager:
                                </label>
                                <select asp-for="ManagerId" asp-items="selectListManagerItems" class="form-select">
                                    <option value="">-- Select Manager (Optional) --</option>
                                </select>
                                <span asp-validation-for="ManagerId" class="text-danger small mt-1"></span>
                            </div>

                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Back to Employees List
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}