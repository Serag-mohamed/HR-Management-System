@model IEnumerable<HRManagementSystem.DTO.EmployeeOfTeamDto>

@{
    ViewData["Title"] = "Team Employees";
    var teamName = ViewData["TeamName"] as string ?? "Selected Team";
}

<div class="container mt-5">

    <h1 class="mb-4 text-primary">
        <i class="fas fa-users me-2"></i> Employees of @teamName
    </h1>

    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="fas fa-info-circle me-2"></i> There are no employees assigned to this team yet.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-lg d-none d-lg-block">
            <table class="table table-striped table-hover table-bordered">

                <thead class="thead-dark bg-dark text-white">
                    <tr>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model.PositionName)
                        </th>
                        <th class="text-nowrap">
                            @Html.DisplayNameFor(model => model.HireDate)
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td class="text-nowrap fw-bold">
                                @Html.DisplayFor(modelItem => emp.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => emp.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => emp.PhoneNumber)
                            </td>
                            <td class="text-nowrap">
                                @Html.DisplayFor(modelItem => emp.PositionName)
                            </td>
                            <td class="text-nowrap">
                                @emp.HireDate.ToString("dd-MMM-yyyy")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-view-list d-block d-lg-none">
            @foreach (var emp in Model)
            {
                <div class="card shadow-sm mb-3 border-start border-primary border-4">
                    <div class="card-body">

                        <h5 class="card-title text-primary">
                            <i class="fas fa-user me-2"></i> @emp.Name
                        </h5>
                        <hr class="mt-1 mb-2" />

                        <div class="mb-2 small">
                            <strong><i class="fas fa-envelope me-1"></i> Email:</strong> @emp.Email
                        </div>

                        <div class="mb-2 small">
                            <strong><i class="fas fa-phone me-1"></i> Phone Number:</strong> @emp.PhoneNumber
                        </div>

                        <div class="mb-2 small">
                            <strong><i class="fas fa-briefcase me-1"></i> Position:</strong> @emp.PositionName
                        </div>

                        <div class="mb-2 small">
                            <strong><i class="fas fa-calendar-alt me-1"></i> Hire Date:</strong>
                            @emp.HireDate.ToString("dd MMMM, yyyy")
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>
