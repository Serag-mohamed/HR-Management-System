@model HRManagementSystem.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "Add";
    SelectList selectListPosItems = ViewBag.Positions != null
        ? new SelectList(ViewBag.Positions, "Id", "Name", Model.PositionId) 
        : new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text");

    SelectList selectListManagerItems = ViewBag.Managers != null
        ? new SelectList(ViewBag.Managers, "Id", "Name", Model.ManagerId) 
        : new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text");
}



<div class="container mt-3">

    <h1 class="mb-4 text-primary">
        <i class="fas fa-user-plus me-2"></i> Add New Employee
    </h1>

    <hr class="mb-5" />

    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-address-card me-2"></i> Employee Profile Form
                    </h5>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Add">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }

                        <div class="row">

                            <div class="col-md-6 border-end">
                                <h6 class="text-secondary mb-3"><i class="fas fa-info-circle me-1"></i> Personal Details</h6>

                                <div class="form-group mb-3">
                                    <label asp-for="FirstName" class="form-label fw-bold"></label>
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                    <span asp-validation-for="FirstName" class="text-danger small mt-1"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="LastName" class="form-label fw-bold"></label>
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                    <span asp-validation-for="LastName" class="text-danger small mt-1"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label fw-bold"></label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="example@company.com" />
                                    <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Phone" class="form-label fw-bold"></label>
                                    <input asp-for="Phone" class="form-control" placeholder="Phone Number" />
                                    <span asp-validation-for="Phone" class="text-danger small mt-1"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="Address" class="form-label fw-bold"></label>
                                    <input asp-for="Address" class="form-control" placeholder="Full Address" />
                                    <span asp-validation-for="Address" class="text-danger small mt-1"></span>
                                </div>
                            </div>

                            <div class="col-md-6 ps-md-4">
                                <h6 class="text-secondary mb-3"><i class="fas fa-briefcase me-1"></i> Employment Details</h6>

                                <div class="form-group mb-3">
                                    <label asp-for="PositionId" class="form-label fw-bold"></label>
                                    <select asp-for="PositionId" asp-items="selectListPosItems" class="form-control">
                                        <option value="">-- Select Position --</option>
                                    </select>
                                    <span asp-validation-for="PositionId" class="text-danger small mt-1"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ManagerId" class="form-label fw-bold"></label>
                                    <select asp-for="ManagerId" asp-items="selectListManagerItems" class="form-control">
                                        <option value="">-- Select Manager --</option>
                                    </select>
                                    <span asp-validation-for="ManagerId" class="text-danger small mt-1"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <label asp-for="HireDate" class="form-label fw-bold"></label>
                                    <input asp-for="HireDate" class="form-control" placeholder="Hire Date" />
                                    <span asp-validation-for="Address" class="text-danger small mt-1"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <label asp-for="BasicSalary" class="form-label fw-bold"></label>
                                    <input asp-for="BasicSalary" class="form-control" type="number" step="0.01" placeholder="e.g., 5000.00" />
                                    <span asp-validation-for="BasicSalary" class="text-danger small mt-1"></span>
                                </div>

                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4 pt-3 border-top">
                            <button type="submit" value="Add" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus me-2"></i> Add Employee
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Back to Employees List
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}