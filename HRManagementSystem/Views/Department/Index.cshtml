@model IEnumerable<HRManagementSystem.DTO.DepartmentDto>

@{
    ViewData["Title"] = "Departments List";
}

<div class="container mt-5">

    <h1 class="mb-4 text-primary">
        <i class="fas fa-building me-2"></i> Departments List
    </h1>

    <hr />

    <p class="mb-4">
        <a asp-action="Add" class="btn btn-success">
            <i class="fas fa-plus me-2"></i> Add New Department
        </a>
    </p>

    <div class="table-responsive shadow-lg d-none d-lg-block">
        <table class="table table-striped table-hover table-bordered">

            <thead class="thead-dark bg-dark text-white">
                <tr>
                    <th class="text-center text-nowrap" style="width: 80px;">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th class="text-nowrap">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="text-nowrap">
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th class="text-nowrap">
                        @Html.DisplayNameFor(model => model.UpdatedAt)
                    </th>
                    <th class="text-center text-nowrap" style="width: 150px;">
                        Actions
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center fw-bold">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="fw-bold text-primary">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            @if(item.UpdatedAt != null)
                            {
                                @Html.DisplayFor(modelItem => item.UpdatedAt)
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </td>
                        <td class="text-center text-nowrap">

                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1" title="Edit">
                                <i class="fas fa-pen-to-square"></i>
                            </a>

                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="Details">
                                <i class="fas fa-file-alt"></i>
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-view-list d-block d-lg-none">
        @foreach (var item in Model)
        {
            <div class="card shadow-sm mb-3 border-start border-primary border-4">
                <div class="card-body">

                    <h5 class="card-title text-primary">
                        <i class="fas fa-building me-2"></i> @item.Name
                    </h5>
                    <hr class="mt-1 mb-2" />

                    <div class="mb-2 small">
                        <strong>ID:</strong> @item.Id
                    </div>
                    <div class="mb-2 small">
                        <strong><i class="fas fa-clock me-1"></i> Created At:</strong> @Html.DisplayFor(modelItem => item.CreatedAt)
                    </div>
                    <div class="mb-2 small">
                        <strong><i class="fas fa-sync-alt me-1"></i> Updated At:</strong> @Html.DisplayFor(modelItem => item.UpdatedAt)
                    </div>

                    <div class="d-flex justify-content-start mt-3 pt-2 border-top">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-2">
                            <i class="fas fa-pen-to-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-2">
                            <i class="fas fa-file-alt"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>