@model HRManagementSystem.DTO.DepartmentDto

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">

    <h1 class="mb-4 text-primary">
        <i class="fas fa-building me-2"></i> Department Details
    </h1>

    <hr class="mb-5" />

    <div class="mb-4 d-flex justify-content-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="fas fa-edit me-1"></i> Edit Department
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="fas fa-trash-alt me-1"></i> Delete Department
        </a>
    </div>

    <div class="card shadow-lg mb-5 border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-info-circle me-2"></i> @Model.Name Information
            </h4>
        </div>
        <div class="card-body p-4">
            <div class="row">

                <div class="col-md-6 border-end">
                    <p class="card-text fw-bold">
                        <i class="fas fa-tag me-2 text-secondary"></i> ID:
                        <span class="ms-2 fw-normal">@Model.Id</span>
                    </p>
                    <p class="card-text fw-bold">
                        <i class="fas fa-signature me-2 text-secondary"></i> Department Name:
                        <span class="ms-2 fw-normal text-primary">@Model.Name</span>
                    </p>
                    <p class="card-text fw-bold">
                        <i class="fas fa-user-tie me-2 text-secondary"></i> Total Positions:
                        <span class="badge bg-success ms-2 fs-6">@Model.Positions.Count()</span>
                    </p>
                </div>

                <div class="col-md-6 ps-md-4">
                    <p class="card-text fw-bold">
                        <i class="fas fa-user-tie me-2 text-secondary"></i> Manager Name:
                        <span class="ms-2 fw-normal">@Model.ManagerName</span>
                    </p>
                    <p class="card-text fw-bold">
                        <i class="fas fa-calendar-plus me-2 text-secondary"></i> Created At:
                        <span class="ms-2 fw-normal">@Model.CreatedAt.ToString("yyyy-MM-dd")</span>
                    </p>
                    <p class="card-text fw-bold">
                        <i class="fas fa-calendar-check me-2 text-secondary"></i> Updated At:
                        <span class="ms-2 fw-normal">
                            @if (Model.UpdatedAt.HasValue)
                            {
                                @Model.UpdatedAt?.ToString("yyyy-MM-dd")
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h3 class="mb-3 text-secondary">
            <i class="fas fa-project-diagram me-2"></i> Associated Positions
        </h3>

        @if (Model.Positions.Any())
        {
            <div class="table-responsive shadow-lg">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Position Name</th>
                            <th>Description</th>
                            <th class="text-center">Employees</th>
                            <th class="text-center">Created At</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var position in Model.Positions)
                        {
                            <tr>
                                <td class="fw-bold">@position.Name</td>
                                <td>@position.Description</td>
                                <td class="text-center">
                                    <span class="badge bg-info text-dark">@position.EmployeeCount</span>
                                </td>
                                <td>@position.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-action="Details"
                                       asp-controller="Position"
                                       asp-route-id="@position.Id"
                                       title="View Position Details">
                                        <i class="fas fa-eye me-1"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                <i class="fas fa-info-circle me-2"></i> No positions have been defined for the **@Model.Name** department yet.
            </div>
        }
    </div>

    <hr class="mt-5" />

    <div class="text-center mb-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left me-2"></i> Back to Departments List
        </a>
    </div>

</div>