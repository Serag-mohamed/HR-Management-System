@using HRManagementSystem.DTO
@model DashboardDto
@using Newtonsoft.Json

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">

    <h2 class="mb-4 fw-bold text-dark">
        <i class="fas fa-chart-line me-2 text-primary"></i> HR Management Dashboard
    </h2>

    <hr class="mb-5" />

    <div class="row g-4 mb-5">

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-start border-4 border-primary h-100">
                <div class="card-body p-3">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="text-primary text-uppercase mb-1">Total Employees</h6>
                            <h3 class="mb-0 fw-bold">@Model.TotalEmployees</h3>
                        </div>
                        <div class="col-4 text-end">
                            <i class="fas fa-users fa-2x text-primary opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-start border-4 border-success h-100">
                <div class="card-body p-3">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="text-success text-uppercase mb-1">Departments</h6>
                            <h3 class="mb-0 fw-bold">@Model.DepartmentsCount</h3>
                        </div>
                        <div class="col-4 text-end">
                            <i class="fas fa-building fa-2x text-success opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-start border-4 border-info h-100">
                <div class="card-body p-3">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="text-info text-uppercase mb-1">Positions</h6>
                            <h3 class="mb-0 fw-bold">@Model.PositionsCount</h3>
                        </div>
                        <div class="col-4 text-end">
                            <i class="fas fa-briefcase fa-2x text-info opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-start border-4 border-warning h-100">
                <div class="card-body p-3">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="text-warning text-uppercase mb-1">Avg Salary</h6>
                            <h3 class="mb-0 fw-bold">@Model.AverageSalary.ToString("C0")</h3>
                        </div>
                        <div class="col-4 text-end">
                            <i class="fas fa-money-bill-wave fa-2x text-warning opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card shadow-sm border-start border-4 border-danger h-100">
                <div class="card-body p-3">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="text-danger text-uppercase mb-1">Pending Leaves</h6>
                            <h3 class="mb-0 fw-bold">@Model.PendingLeaves</h3>
                        </div>
                        <div class="col-4 text-end">
                            <i class="fas fa-calendar-times fa-2x text-danger opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <hr class="mt-4 mb-4" />

    <div class="row">

        <div class="col-lg-6 mb-4">
            <div class="card shadow-lg h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i> Latest Hires</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Hire Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.LatestEmployees != null && Model.LatestEmployees.Any())
                                {
                                    @foreach (var emp in Model.LatestEmployees)
                                    {
                                        <tr>
                                            <td class="fw-bold">@emp.FullName</td>
                                            <td>@emp.PositionName</td>
                                            <td>@emp.HireDate.ToShortDateString()</td>
                                            <td>
                                                <a asp-controller="Employee" asp-action="Details" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-3">No recent hires to display.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-lg h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i> Employees by Department</h5>
                </div>
                <div class="card-body p-4 d-flex align-items-center justify-content-center">
                    <canvas id="deptChart"></canvas>
                </div>
            </div>
        </div>

    </div> @* نهاية الـ row للجدول والـ Chart *@

</div> @* نهاية الـ container *@

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const ctx = document.getElementById('deptChart').getContext('2d');

        const chartData = @Html.Raw(JsonConvert.SerializeObject(Model.DepartmentChart));

        if (chartData && chartData.length > 0) {
             const departmentNames = chartData.map(c => c.DepartmentName);
             const employeeCounts = chartData.map(c => c.EmployeeCount);

             const colors = [
                '#007bff', '#28a745', '#dc3545', '#ffc107', '#17a2b8',
                '#6f42c1', '#fd7e14', '#e83e8c', '#20c997', '#6c757d'
             ];

             new Chart(ctx, {
                type: 'doughnut', 
                data: {
                    labels: departmentNames,
                    datasets: [{
                        data: employeeCounts,
                        backgroundColor: colors.slice(0, departmentNames.length),
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: false,
                        }
                    }
                }
            });
        } else {
             ctx.font = "16px sans-serif";
             ctx.textAlign = "center";
             ctx.fillText("No department data available.", 150, 150);
        }
    });
</script>